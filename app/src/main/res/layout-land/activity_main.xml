<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_row="2"
    android:layout_column="3"
    >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"

        >
        <LinearLayout
            android:layout_margin="4dp"
            android:paddingVertical="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_margin="4dp"
                android:paddingHorizontal="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_margin="4dp"
                    android:orientation="horizontal"
                    android:background="@color/colorConfiguracion"
                    android:layout_height="145dp"
                    android:layout_width="50dp"
                    android:layout_weight="1"
                    >

                <ImageView
                    android:src="@drawable/config"
                    android:layout_margin="4dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
                </LinearLayout>

                <LinearLayout
                    android:layout_margin="4dp"
                    android:orientation="horizontal"
                    android:background="@color/colorPerfil"
                    android:layout_height="145dp"
                    android:layout_width="50dp"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:src="@drawable/perfil"
                        android:layout_margin="4dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_margin="4dp"
                    android:orientation="horizontal"
                    android:background="@color/colorPresupuesto"
                    android:layout_height="145dp"
                    android:layout_width="50dp"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:src="@drawable/presupuesto"
                        android:layout_margin="4dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />
                </LinearLayout>
            </LinearLayout>
            <!-- Segunda fila-->

            <LinearLayout
                android:layout_margin="4dp"
                android:paddingHorizontal="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_margin="4dp"
                    android:orientation="horizontal"
                    android:background="@color/colorEgreso"
                    android:layout_height="145dp"
                    android:layout_width="50dp"
                    android:layout_weight="1"
                    >

                    <ImageView
                        android:src="@drawable/egreso"
                        android:layout_margin="4dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_margin="4dp"
                    android:orientation="horizontal"
                    android:background="@color/colorIngresos"
                    android:layout_height="145dp"
                    android:layout_width="50dp"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:src="@drawable/ingreso"
                        android:layout_margin="4dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_margin="4dp"
                    android:orientation="horizontal"
                    android:background="@color/colorFavoritos"
                    android:layout_height="145dp"
                    android:layout_width="50dp"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:src="@drawable/favoritos"
                        android:layout_margin="4dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</GridLayout>